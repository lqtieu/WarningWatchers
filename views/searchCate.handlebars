<!-- Search page for specific category --> 

<link rel="stylesheet" href="/static/style.css">
<link rel="stylesheet" href="/static/team-bio.css">

<body>
    <main class="contentContainer" role="main">
      <div class="index">
        <div class="container">
          <div class="container"></div> <!-- Space between header and search bar-->

          <!-- Search Bar for Movies -->
          <label>
            <h1>Category Search </h1>
          </label>
          <form action="/searchCate" method="GET" class="form-inline d-flex justify-content-center md-form form-sm mt-0">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75" type="test" placeholder="Search for a category"
              aria-label="Search" style="padding-right: 5px;" name="movieTitle">
            <button type="submit" style="width:min-content; height:min-content; padding: 5px; padding-left: 5px;">
              Search</button>
        </div>

          <div class="container">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">{{movies.movieTitle}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  <br>Movie Year: {{movies.movieYear}}
                  <br>Length: {{movies.movieLength}}
                  <br>Rating: {{movies.movieRating}}
                </h6>
                <p class="card-text">
                  {{#each category}}
                  <li> {{this.addCategory}} </li>
                  {{/each}}
                </p>
              </div>
            </div>
          </div>
        </form>
      </div>
  </div>
  </main>
</body>