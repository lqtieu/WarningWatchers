<!-- Page for feedback to user to know their movie submission was successful and correct (displays submission back to user) -->
<link rel="stylesheet" href="/static/style.css">

<body>
    <main class="contentContainer" role="main" style="height: 100%; min-height: 100%">
        <br>
        <h1 class="text-center">Thank you for adding a movie!</h1>
        <br>
        <div class="container">
            <div class="card" style="padding-bottom: 2.5%;">
                <div class="card-body" style="align-items: center;">
                    <h2><br>{{movies.movieTitle}}<br></h2>
                    Movie Year: {{movies.movieYear}} | Length: {{movies.movieLength}} | Rating: {{movies.movieRating}}
                </div>
            </div>
        </div>

        <div class="container">
            <a href="../addmovie">
              <div class="card" style="display: block; padding-top: auto; background-color: #ed6a5a">
                <div class="card-body" style="padding: 10px;">
                  <!-- Movie Reel Icon from Bootstrap -->
                  <h3><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-camera-reels" fill="currentColor"
                      xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd"
                        d="M0 8a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 7.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 16H2a2 2 0 0 1-2-2V8zm11.5 5.175l3.5 1.556V7.269l-3.5 1.556v4.35zM2 7a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h7.5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H2z" />
                      <path fill-rule="evenodd"
                        d="M3 5a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                      <path fill-rule="evenodd"
                        d="M9 5a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg></h3>
                  <h5>Add another movie</h5>
                </div>
              </div>
            </a>
        </div>
    </main>
</body>