<!-- Display page for all movies but this time you can search for categories -->

<link rel="stylesheet" href="/static/style.css">
<link rel="stylesheet" href="/static/team-bio.css">

<body>
    <main class="contentContainer" role="main">
      <div class="index">
        <div class="container">
          <div class="container"></div> <!-- Space between header and search bar-->

          <!-- Search Bar for Categories -->
          <label>
            <h1>Category Search</h1>
          </label>
          <form action="/categories" method="POST"
            class="form-inline d-flex justify-content-center md-form form-sm mt-0">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75" type="test" placeholder="Search for a category"
              aria-label="Search" style="padding-right: 5px;" name="addCategory">
            <button type="submit" style="width:min-content; height:min-content; padding: 5px; padding-left: 5px;">
              Search</button>

            <!-- Display movies-->
            {{#each movies}}
            <div class="container" style="margin-bottom: auto;">
              <div class="card" style="display:block;">
                <div class="card-body">
                  <h5 class=" card-title">{{this.movieTitle}}</h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    Movie Year: {{movies.movieYear}} | Length: {{movies.movieLength}} | Rating: {{movies.movieRating}}
                  </h6>
                  <p class="card-text">
                    {{#each category}}
                    <li> {{this.addCategory}} </li>
                    {{/each}}
                  </p>
                </div>
              </div>
            </div>
            {{/each}}
          </form>
        </div>
      </div>
  </div>
  </main>
</body>