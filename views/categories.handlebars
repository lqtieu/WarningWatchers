<link rel="stylesheet" href="/static/team-bio.css">

<body>
  <div class="container" style="height: 100vh;">
    <!-- Take out whitespace underneath footer -->
    <main class="contentContainer" role="main">
      <div class="index">
        <div class="container">
          <div class="container"></div> <!-- Space between header and search bar-->

          <!-- Search Bar for categories -->
          <label>
            <h1>Category Search </h1>
          </label>
          <form class="form-inline d-flex justify-content-center md-form form-sm mt-0">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75" type="test" placeholder="Search for Category Title"
              aria-label="Search" style="padding-right: 5px;" name="movieTitle">
            <button type="submit" style="width:min-content; height:min-content; padding: 5px; padding-left: 5px;">
              Search</button>

              {{#each categories}}
            <div class="container">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{this.addCategory}}</h5>
                  {{!-- <h6 class="card-subtitle mb-2 text-muted">
                    <br>Movie Year: {{this.movieYear}}
                    <br>Length: {{this.movieLength}}
                    <br>Rating: {{this.movieRating}}
                  </h6> --}}
                  <p class="card-text">
                    {{#each movies}}
                    <li> {{this.movieTitle}} </li>
                   <h6 class="card-subtitle mb-2 text-muted">
                    <br>Movie Year: {{this.movieYear}}
                    <br>Length: {{this.movieLength}}
                    <br>Rating: {{this.movieRating}}
                  </h6>
                    {{/each}}
                  </p>
                </div>
              </div>
            </div>
          {{/each}}
          </form>
        </div>

        <!-- Might have to add a separate container to display categories + search results here -->

      </div>
  </div>

