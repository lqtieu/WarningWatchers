<!-- Page for feedback to user to know their category submission was successful and correct (displays submission back to user) -->
<link rel="stylesheet" href="/static/style.css">

<body>
    <main class="contentContainer" role="main" style="height: 100%; min-height: 100%">
        <br>
        <h1 class="text-center">Thank you for adding a category to {{movies.movieTitle}}!</h1>
        <br>
        <div class="container">
            <div class="card" style="padding-bottom: 2.5%;">
                <div class="card-body" style="align-items: center;">
                    <h2><br>{{movies.movieTitle}}<br></h2>
                    Movie Year: {{movies.movieYear}} | Length: {{movies.movieLength}} | Rating: {{movies.movieRating}}
                </div>
                <div class="card-body" style="color: black; text-align:center;">
                    {{#each category}}
                      {{this.addCategory}}<br>
                    {{/each}}
                  </div>
            </div>
        </div>

        <div class="container">
            <a href="../addCate">
              <div class="card" style="display: block; padding-top: auto; background-color: #ed6a5a">
                <div class="card-body" style="padding: 10px;">
                  <!-- List Icon from Bootstrap -->
                  <h3><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-card-list" fill="currentColor"
                      xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd"
                        d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                      <path fill-rule="evenodd"
                        d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z" />
                      <circle cx="3.5" cy="5.5" r=".5" />
                      <circle cx="3.5" cy="8" r=".5" />
                      <circle cx="3.5" cy="10.5" r=".5" />
                    </svg></h3>
                  <h5>Request to Add a Category</h5>
                </div>
              </div>
            </a>
        </div>

    </main>
</body>