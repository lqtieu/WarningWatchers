<!-- Display page for all movies --> 

<link rel="stylesheet" href="/static/style.css">
<link rel="stylesheet" href="/static/team-bio.css">

<body>
  <div class="container" style="height: 100vh;"> <!-- Take out whitespace underneath footer -->
    <main class="contentContainer" role="main">
      <div class="index">
        <div class="container">
          <div class="container"></div> <!-- Space between header and search bar-->

          <!-- Search Bar for Movies -->
          <label>
            <h1>Movie Search </h1>
          </label>
          <form class="form-inline d-flex justify-content-center md-form form-sm mt-0">
            <i class="fas fa-search" aria-hidden="true"></i>
            <input class="form-control form-control-sm ml-3 w-75" type="test" placeholder="Search for Movie Title"
              aria-label="Search" style="padding-right: 5px;" name="movieTitle">
            <button type="submit" style="width:min-content; height:min-content; padding: 5px; padding-left: 5px;">
              Search</button>
          </form>
          {{#each movies}}
            <div class="container">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{this.movies.movieTitle}}</h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    <br>Movie Year: {{this.movies.movieYear}}
                    <br>Length: {{this.movies.movieLength}}
                    <br>Rating: {{this.movies.movieRating}}
                  </h6>
                  <p class="card-text">
                    {{#each category}}
                    <li> {{this.addCategory}} </li>
                    {{/each}}
                  </p>
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
  </div>
  </main>
  </div>
</body>