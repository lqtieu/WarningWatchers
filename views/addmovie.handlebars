<!-- Page to ADD MOVIES to the database. -->

<link rel="stylesheet" href="/static/about.css">

<body>
  <main class="contentContainer" role="main">
    <div class="index">
      <!--<form action="#">-->
      <div class="container">
        <br>
        <h1 style="color: black;">Suggest a Movie</h1>
        <hr>

        {{#if error}}
        <div class="alert alert-danger center-block" style="width: 80%; margin-left: 10%;" role="alert"> <i
            class="fa fa-exclamation-triangle" aria-hidden="true">
            {{error}}
        </div>
        {{/if}}

        <form action="/addmovie" method="POST">
          <div class="form-group row" style="text-align: left;">
            <label class="col-sm-2 col-form-label">Movie Title</label>
            <div class="col-sm-10">
              <input type="test" class="form-control" name="movieTitle" placeholder="Enter Movie Title">
            </div>
          </div>
          <div class="form-group row" style="text-align: left;">
            <label class="col-sm-2 col-form-label">Release Year</label>
            <div class="col-sm-10">
              <input type="test" class="form-control" name="movieYear" placeholder="Enter release year">
            </div>
          </div>
          <div class="form-group row" style="text-align: left;">
            <label class="col-sm-2 col-form-label">Movie Length (Minutes)</label>
            <div class="col-sm-10">
              <input type="test" class="form-control" name="movieLength" placeholder="Enter Movie Length in minutes">
            </div>
          </div>
          <div class="form-group row" style="text-align: left;">
            <label class="col-sm-2 col-form-label">Rating</label>
            <div class="col-sm-10">
              <input type="test" class="form-control" name="movieRating"
                placeholder="Enter movie rating (G, PG, PG-13, R, etc.)">
            </div>
          </div>

          <button type="submit" style="align-content: center;">Submit</button>

        </form>
      </div>

    </div>

    </form>
    </div>
    </div>
  </main>
</body>